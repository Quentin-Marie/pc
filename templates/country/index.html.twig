{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">

		{{ form(form) }}

			<table class="table table-dark table-striped mt-5 w-75 mx-auto">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nom</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for country in countries %}
						<tr>
							<td>{{ country.id }}</td>
							<td>{{ country.name }}</td>
							<td class="col-4">
								<a href="{{ path('country_update', {'id': country.id}) }}" class="btn btn-light">Modifier</a>
								<a href="{{ path('country_delete', {'id': country.id}) }}" class="btn btn-danger">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endblock %}
